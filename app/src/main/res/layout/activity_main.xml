<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/edit_text_enter_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/enter_user_organization"/>

    <LinearLayout
        android:id="@+id/main_linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/edit_text_enter_user">

        <Button
            android:id="@+id/button_search_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_for_user"/>

        <Button
            android:id="@+id/button_search_orgs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/search_for_organizaion"
            />

    </LinearLayout>

    <ExpandableListView
        android:id="@+id/list_view_expandable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/main_linear_layout"/>

</RelativeLayout>